<div id="header-wrapper">
	<div id="header">

		<div id="northHeader">

			<!-- Barra buscar amigos -->
			<div id="find">
				<input type="text" id="findFriends"
					placeholder=" Busca a tus amigos"><br>
			</div>

			<!-- login-->
			<div id="login">

				
				<div id="loginText">

					<ul class="nav">

						<li><a href="${prefix}mi_perfil"><img class="i_profile" src="${prefix}resources/images/${usuario.idFoto}"></a>
							<ul>
								<c:choose>

									<c:when test="${not empty usuario}">
										<li class="submenu"><a href="${prefix}mi_perfil" style="text-transform: uppercase;" >${usuario.login}</a></li>
										<c:set var="rol" scope="session" value="admin"/>	
	
										<c:if test="${usuario.rol == rol}">
										<li class="submenu"><a href="${prefix}administrador"> Administrar </a></li>
										</c:if>
										<li class="submenu"><a href="${prefix}mensajes"> Mensajes </a></li>
										<li class="submenu"><a href="${prefix}logout"> Cerrar Sesion </a></li>
									</c:when>

									<c:otherwise>
										<li class="submenu"><a href="${prefix}login"> Login </a></li>
									</c:otherwise>
								</c:choose>
							</ul>
							</li>
					</ul>


				</div>
			</div>

			<div id="logo">
				<!-- Logo -->
				<h1>
					<a href="${prefix}home"><img id="logo"
						src="${prefix}resources/images/logo.png"></a>
				</h1>
			</div>

		</div>
		<!-- Nav -->
		<nav id="nav">
			<ul>
			
				<li><a id="b_crear" href="${prefix}crear">CREAR</a></li>
				<li><a id="b_actv" href="${prefix}mis_actividades">MIS ACTIVIDADES</a></li>
				<li><a id="b_buscar" href="${prefix}buscar">BUSCAR</a></li>
			</ul>
		</nav>
	</div>
</div>