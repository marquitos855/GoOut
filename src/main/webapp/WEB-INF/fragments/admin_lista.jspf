	<%@ include file="../fragments/add/addActividad.jspf" %>	
	
	<button id="Actividad" class="papelera"></button>	
	
	<br>
	<h1>Actividades</h1>
	<a class="marcar" onclick="seleccionar(lista_actividades)">Marcar todos</a>
	<a class="desmarcar" onclick="deseleccionar(lista_actividades)">Desmarcar todos</a>
		<table>
			<c:forEach items="${actividades}" var="a">
			<c:if test="${a.eliminado == false }"><tr id="Actividad_${a.id}"><td><input name="Actividad" value="${a.id}" type="checkbox"><a href="${prefix}actividad/${a.id}"> ${a.id}</a><td><c:out value="${a.nombre}"/></c:if>
			</c:forEach>
		</table>
